<h1>Доход по дням</h1>

<% if @revenue_by_day.any? %>
  <table style="border-collapse: collapse; width: 100%;">
    <thead>
      <tr>
        <th style="border: 1px solid #ccc; padding: 8px;">Дата</th>
        <th style="border: 1px solid #ccc; padding: 8px;">Доход</th>
      </tr>
    </thead>
    <tbody>
      <% @revenue_by_day.each do |r| %>
        <tr>
          <td style="border: 1px solid #ccc; padding: 8px;"><%= r.day %></td>
          <td style="border: 1px solid #ccc; padding: 8px;"><%= number_to_currency(r.revenue) %> руб</td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% else %>
  <p>Пока нет дохода</p>
<% end %>

<br>
<%= link_to "Все аренды", rentals_path, class: "new-button" %>

<style>
  .new-button { 
    display: inline-block; padding: 10px; background: #007bff; color: white; text-decoration: none; border-radius: 5px; margin-top: 20px; 
  }
</style>
