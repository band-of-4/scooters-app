<h1>Топ клиентов по расходам</h1>

<% if @clients.any? %>
  <ul style="list-style: none; padding: 0;">
    <% @clients.each_with_index do |client, index| %>
      <li style="border: 1px solid #ccc; padding: 15px; margin: 10px 0; border-radius: 8px; background: #f9f9f9;">
        <strong>#<%= index + 1 %> — 
          <%= link_to "#{client.last_name} #{client.first_name} #{client.patronymic}".strip, client_path(client) %>
        </strong><br>
        Email: <%= client.email %><br>
        Телефон: <%= client.phone %><br>
        Баланс: <%= number_to_currency(client.balance) %> руб<br>
        Потрачено всего: <%= number_to_currency(client.total_spent) %> руб<br>
        Аренд всего: <%= client.total_rentals_count %>
      </li>
    <% end %>
  </ul>
<% else %>
  <p>Нет клиентов, которые потратили деньги</p>
<% end %>

<%= link_to "Все клиенты", clients_path, class: "new-button" %>

<style>
  .new-button { 
    display: inline-block; padding: 10px; background: #007bff; color: white; text-decoration: none; border-radius: 5px; margin-top: 20px; 
  }
</style>
